<main>
<div class="container-xl">
<div class="row align-items-center g-lg-5 py-5">
    <h2>All Patients</h2>
</div>

<table class="table">
<thead>
    <tr>
    <th scope="col">#</th>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <th scope="col">DOB</th>
    <th scope="col">Height</th>
    <th scope="col">Email</th>
    <th scope="col">Action</th>
    </tr>
</thead>
    {{#each patients as |patient|}} 
<tbody>

 <tr>
    <th scope="row">1</th>
  <td class="pt-fname">{{patient.first_name}}</td>
    <td class="pt-lname">{{patient.last_name}}</td>
    <td class="pt-age">{{patient.height}}</td>
    <td class="pt-email">{{patient.email}}</td>
    <td class="chart-action">
        <div> 
            <button onclick="edit_patient(event)">Edit</button>
            <button onclick="delete_patient(event)">Delete</button>
            <button onclick="reassign_patient(event)">Reassign</button>
        </div>

        </td>
    </tr>

</tbody>
{{/each }} 
</table>

</div>

</main>
<script src="../public/js/patients.js"></script>
